{
  "defaultSeverity": "error",
  "extends": [
    "tslint:recommended"
  ],
  "jsRules": {},
  "rules": {
    "no-trailing-whitespace": false,
    "semicolon": [
      true,
      "never"
    ],
    "quotemark": [
      true,
      "single",
      "avoid-escape"
    ],
    "trailing-comma": [
      false
    ],
    "no-console": [
      false
    ],
    "only-arrow-functions": false,
    "object-literal-sort-keys": false,
    "ordered-imports": false,
    "space-before-function-paren": false,
    "no-empty-interface": true
  },
  "rulesDirectory": [
    "./eInvoice"
  ]
}